@inject SignInManager<Account> signInManager
@inject UserManager<Account> userManager
@{
    var user = await userManager.GetUserAsync(User);
}
<!DOCTYPE html>
<html lang="en" style="overflow-y: scroll;">
<head>
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon.ico"/>
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Intern.JO</title>
    <link rel ="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600&family=Work+Sans:wght@600;700;800&display=swap">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Main/site.css" />
    <link rel="stylesheet" href="~/css/Main/responsive.css" />
    <link rel="stylesheet" href="~/css/Main/fonts.css" />
    <link rel="stylesheet" href="~/css/Animate/animate.min.css" />
    <link rel="stylesheet" href="https://cdn.materialdesignicons.com/6.4.95/css/materialdesignicons.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,500,0,0" />
</head>
<body>
    <aside>
        <div class="left">
            <a asp-action="Main" asp-controller="Main"><img src="~/images/Logodark.svg" alt="Facebook Logo"></a>
        </div>
        <div class="center">
            <div class="@(ViewContext.RouteData.Values["Action"].ToString() == "Main"?"active":"")">
                <a style="width:100px" asp-action="Main" asp-controller="Main">
                    <span class="material-symbols-outlined">
                        home
                    </span>
                    <h6>Home</h6>
                </a>
            </div>
            <div class="@(ViewContext.RouteData.Values["Action"].ToString() == "YourApplications"?"active":"")">
                <a asp-action="YourApplications" asp-controller="Applications">
                    <span class="material-symbols-outlined">
                        library_books
                    </span>
                    <h6>Applications</h6>
                </a>
            </div>
            <div class="@(ViewContext.RouteData.Values["Action"].ToString() == "OurCompanies"?"active":"")">
                <a asp-action="OurCompanies" asp-controller="Main">
                    <span class="material-symbols-outlined">
                        apartment
                    </span>
                    <h6>Companies</h6>
                </a>
            </div>
        </div>
        <div class="right">
            <a asp-action="YourProfile" asp-controller="Profile">
                <h6 class="@(ViewContext.RouteData.Values["Action"].ToString() == "YourProfile"?"active":"")">@user.FullName</h6>

                <img src="@Url.Content(user.AccountImage)" id="profile">
            </a>

            <div class="logout">
                <a asp-action="Logout" asp-controller="Account">
                    <span class="material-symbols-outlined">
                        logout
                    </span>
                </a>
            </div>
        </div>
    </aside>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="footer">
        &copy; 2023 <span>Intern.JO</span> All Rights Reserved
    </div>

    <script src="https://kit.fontawesome.com/74c20ed08e.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>