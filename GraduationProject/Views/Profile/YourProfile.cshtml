@model Student
@{
    ViewData["Title"] = "YourProfile";
}

<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">

                            
                            <div class="image-container" style="background-image:url('@Url.Content(Model.Image)')">
                                <img id="imageClick" src="@Url.Content(Model.Image)" class="rounded-circle">
                            </div>
                            
                            <div class="mt-3">
                                <h4 class="text-capitalize">@Model.StudentName</h4>
                                <a href="mailto:@Model.StudentEmail?subject=Contact"><p class="mb-1" style="color:#437ece"> @Model.StudentEmail</p> </a>
                                <p class="text-muted font-size-sm text-capitalize">@Model.Address</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Status</h6>
                            </div>
                            @if (@Model.isTrainee)
                            {
                                <div class="col-sm-9 text-capitalize">
                                    Under Training
                                </div>
                            }
                            else
                            {
                                <div class="col-sm-9 text-capitalize">
                                    Hasn't Trained Yet
                                </div>
                            }
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">GPA</h6>
                            </div>
                            <div class="col-sm-9 text-capitalize">
                                @Model.GPA
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Skills</h6>
                            </div>
                            <div class="col-sm-9 text-capitalize">
                                @Model.Skills
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Experience</h6>
                            </div>
                            <div class="col-sm-9 text-capitalize">
                                @Model.Experience
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Projects</h6>
                            </div>
                            <div class="col-sm-9 text-capitalize">
                                @Model.Projects
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">University</h6>
                            </div>
                            <div class="col-sm-9 text-capitalize">
                                @Model.University.UniversityName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="frame">

                                <a class="custom-btn" asp-action="EditProfile" asp-controller="Profile">Edit Profile</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
