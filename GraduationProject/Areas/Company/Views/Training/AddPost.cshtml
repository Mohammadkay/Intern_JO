@model GraduationProject.Areas.Company.ViewModels.AddPostViewModel

@{
    ViewData["Title"] = "AddPost";
}
<section class="is-hero-bar">
    <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
        <h1 class="title">
            Add Post
        </h1>
    </div>
</section>
<div class="card mb-6">
    <header class="card-header">
        <p class="card-header-title">
            <span class="icon"><i class="mdi mdi-ballot"></i></span>
            Post Details
        </p>
    </header>
    <div class="card-content">
        <form asp-action="AddPost" asp-controller="Training">
            <div class="field">
                <label asp-for="TrainingTitle" class="label"></label>
                <div class="control">
                    <input class="input" asp-for="TrainingTitle" placeholder="Enter Post Title">
                </div>
                <span asp-validation-for="TrainingTitle" class="help" style="color:red;">
                </span>
            </div>
            <div class="field">
                <label class="label" asp-for="CategoryId"></label>
                <div class="control">
                    <div class="select">
                        <select asp-for="CategoryId" asp-items="@ViewBag.Categories">
                            <option value="0">--Select Category--</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="field">
                <label asp-for ="TrainingLocation" class="label"></label>
                <div class="control">
                    <input class="input" asp-for="TrainingLocation" placeholder="Location...">
                </div>
                <span asp-validation-for="TrainingLocation" class="help" style="color:red;">
                </span>
            </div>
            <div class="field">
                <label asp-for="TrainingDetails" class="label"></label>
                <div class="control">
                    <textarea asp-for="TrainingDetails" class="textarea" placeholder="Enter Post Details..."></textarea>
                </div>
                <span asp-validation-for="TrainingDetails" class="help" style="color:red;">
                </span>
            </div>
            <div class="field">
                <label class="label" asp-for="StartDate"></label>

                <div class="control">
                    <input class="input" asp-for="StartDate">
                </div>
                <span asp-validation-for="StartDate" class="help" style="color:red;">
                </span>
            </div>
            <div class="field">
                <label class="label" asp-for="EndDate"></label>

                <div class="control">
                    <input class="input" asp-for="EndDate">
                </div>
                <span asp-validation-for="TrainingTitle" class="help" style="color:red;">
                </span>
            </div>
            <hr>
            <div class="field grouped">
                <div class="control">
                    <button type="submit" class="button green">
                        Add
                    </button>
                </div>
                <div class="control">
                    <button type="reset" class="button red">
                        Reset
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
